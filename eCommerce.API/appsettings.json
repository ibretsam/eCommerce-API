{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "eCommerce.API.Middleware": "Debug",
      "eCommerce.API.Controllers": "Information",
      "eCommerce.API.Services": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "Firebase": {
    "ProjectId": "firebase-project-id",
    "CredentialsPath": "firebase-config.json",
    "WebApiKey": "firebase-web-api-key"
  }
}
